<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Artemis Web</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="organizations" Match="NavLinkMatch.All">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Organizations
            </NavLink>
        </li>
    </ul>
    <AuthorizeView>
        <ul class="nav flex-column">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="organizations/create" Match="NavLinkMatch.All">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Create Organization
                </NavLink>
            </li>
        </ul>
    </AuthorizeView>
</div>

@code {
    private bool _collapseNavMenu = true;

    private string NavMenuCssClass => _collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
    }
}
